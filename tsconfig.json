{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@api": [
        "./src/api"
      ],
      "@logic": [
        "./src/logic"
      ],
      "@atoms": [
        "./src/components/atoms"
      ],
      "@client/atoms": [
        "./src/components/client/atoms"
      ],
      "@client/molecules": [
        "./src/components/client/molecules"
      ],
      "@client/organisms": [
        "./src/components/client/organisms"
      ],
      "@client/templates": [
        "./src/components/client/templates"
      ],
      "@server/organisms": [
        "./src/components/server/organisms"
      ],
      "@types": [
        "./src/types"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
